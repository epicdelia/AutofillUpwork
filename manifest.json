{
  "manifest_version": 2,
  "name": "AutoFiller for Upwork",
  "description": "Automatically fill your Upwork proposals with a template",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["options.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",  
    "storage",
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],
  "options_page": "options.html",
  "browser_action": {
      "default_title": "Autofill this page from template",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["popup.js"]
  }
}
